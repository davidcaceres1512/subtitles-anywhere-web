{
  "action": {
     "default_icon": "medias/icon.png",
   "default_popup": "options.html",
     "default_title": "SubAny David"
  },
  "content_scripts": [ {
     "js": [ "content.js" ],
     "matches": [ "https://*/*", "http://*/*" ],
     "run_at": "document_start"
  } ],
  "description": "Add your own SRT, VTT, SAMI, or TTML subtitles to your preferred service streaming web platform.",
  "homepage_url": "https://github.com/PaulRosset/subtitles-anywhere-web",
  "icons": {
     "128": "medias/icon.png"
  },
  "manifest_version": 3,
  "minimum_chrome_version": "68",
  "name": "SubAny Web",
  "host_permissions": ["http://*/*", "https://*/*"],
  "permissions": [ "storage" ],
  "update_url": "https://clients2.google.com/service/update2/crx",
  "version": "0.1.1",
  "web_accessible_resources": [{
  "resources": [ "medias/play.svg", "medias/stop.svg" ],
   "matches": [],
 "extension_ids": []
  }]
}
